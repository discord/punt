{
  "clusters": {
    "default": {
      "datastores": {
        "ch": {
          "type": "clickhouse",
          "config": {
            "url": "tcp://127.0.0.1:9000",
            "types": {
              "*": {
                "table": "test",
                "fields": {
                  "content": {
                    "source": "content"
                  }
                }
              }
            }
          }
        }
      },
      "num_workers": 1,
      "bulk_size": 3,
      "commit_interval": 0,
      "reliability": {
        "insert_retries": 3,
        "retry_delay": 1500
      },
      "servers": [
        {
          "type": "udp",
          "bind": "localhost:5679"
        },
        {
          "type": "tcp",
          "bind": "localhost:5678",
          "octet_counted": true
        }
      ],
      "debug": true
    }
  },
  "types": {
    "*": {
      "prefix": "test-",
      "mapping_type": "test",
      "date_format": "2006.01.02.15",
      "transformer": {
        "name": "direct"
      }
    },
    "logs": {
      "prefix": "logs-",
      "mapping_type": "test",
      "date_format": "2006.01.02.15",
      "transformer": {
        "name": "direct"
      }
    }
  },
  "gc": {
    "test-": {
      "keep": 1
    },
    "logs-": {
      "keep": 5
    }
  },
  "mappings": {
    "test": {
      "fields": {
        "test": {
          "type": "text",
          "index": true
        }
      }
    }
  },
  "templates": {
    "test-*": {
      "mappings": ["test"]
    }
  },
  "alerts": {
    "magic-word-found": {
      "type": "match",
      "sources": [],
      "rollup_window": 2,
      "config": {
        "source": "content",
        "match": "^ magic.*",
        "title": "FOUND MAGIC",
        "description": "{{.content}}",
        "fields": {
          "hostname": "{{.hostname}}",
          "timestamp": "{{.timestamp}}"
        }
      },
      "action": "discord-alert"
    }
  },
  "actions": {
    "discord-alert": {
      "type": "discord",
      "config": {
        "url": "???",
        "color": 16738657
      }
    }
  },
  "control_socket": {
    "enabled": true,
    "bind": "localhost:1234"
  }
}
